prune .github

exclude build.yml
exclude deploy.yml
exclude .readthedocs.yaml
exclude .readthedocs.yml
exclude .gitignore
exclude .gitattributes
exclude .gitmodules
exclude omnipose_mac_environment.yml
exclude test_omni.py


global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude *.nbi
global-exclude *.nbc
global-exclude ._*
global-exclude .DS_Store
global-exclude */__pycache__/*
global-exclude */.ipynb_checkpoints/*
